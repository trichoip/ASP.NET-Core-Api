<Window
    x:Class="WpfApp.Canvas"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Canvas"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Canvas>
        <Button
            Canvas.Left="250"
            Canvas.Top="60"
            Width="200"
            Height="100"
            Panel.ZIndex="1"
            Content="2"
            FontSize="50" />
        <Button
            Canvas.Left="300"
            Canvas.Top="133"
            Width="200"
            Height="100"
            Panel.ZIndex="0"
            Content="1"
            FontSize="50" />
        <Ellipse
            Canvas.Left="50"
            Width="100"
            Height="50"
            Panel.ZIndex="1"
            Fill="Aqua" />
        <Rectangle Width="100" Height="50" Fill="Red" />
        
    </Canvas>
</Window>
