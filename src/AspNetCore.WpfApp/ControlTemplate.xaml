<Window
    x:Class="WpfApp.DataTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DataTemplate"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel.Resources>
            <ControlTemplate x:Key="datatemplate_lv2">
                <StackPanel Background="red">
                    <Image Width="100" Height="100" Source="https://media.sproutsocial.com/uploads/2017/02/10x-featured-social-media-image-size.png" />
                    <TextBlock HorizontalAlignment="Center" Text="lv2" />
                </StackPanel>
            </ControlTemplate>
        </StackPanel.Resources>
        <Button>
            <Button.Template>
                <ControlTemplate>
                    <StackPanel Background="Aqua">
                        <Image Width="100" Height="100" Source="https://media.sproutsocial.com/uploads/2017/02/10x-featured-social-media-image-size.png" />
                        <TextBlock HorizontalAlignment="Center" Text="lv1" />
                    </StackPanel>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Template="{StaticResource datatemplate_lv2}" />
    </StackPanel>
</Window>
