<Window
    x:Class="WpfApp.Binding"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Binding"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <TextBox x:Name="tb1" VerticalAlignment="Top" Text="trichoip" />
        <TextBox VerticalAlignment="Center" Text="{Binding Path=Text, ElementName=tb1, Mode=OneWay}" />
        <TextBlock Text="{Binding}" />
        <Button x:Name="btn1" Click="Button_Click" Content="click" />
    </StackPanel>
</Window>
