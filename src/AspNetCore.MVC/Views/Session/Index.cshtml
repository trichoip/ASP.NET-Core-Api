@using AspNetCore.MVC.Controllers;

@model SessionController
<div>
    <h1>Session</h1>
    <a href="/account/index">account index</a>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="AccountUserVM.Email" class="control-label"></label>
                    <input asp-for="AccountUserVM.Email" class="form-control" />
                    <span asp-validation-for="AccountUserVM.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AccountUserVM.Password" class="control-label"></label>
                    <input asp-for="AccountUserVM.Password" class="form-control" />
                    <span asp-validation-for="AccountUserVM.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-action="Login" type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
